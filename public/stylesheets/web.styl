ul.web-images
  list-style: none
  li
    width: 100px
    height: 100px
    background-size: cover
    float: left
    margin: 10px 10px 0 0
    border: 5px solid white
    box-shadow: -1px 1px 1px #aaa
    position: relative
    &.selected
      border-color: #007AD6
      box-shadow: none
    &.opaque
      opacity: 0.2
    .loader
      top: 27px
      left: 3px
      .circle:after
        background-color: #444

ul.web-files
  list-style: none
  margin-right: 20px
  li
    margin-bottom: 5px
    padding: 5px
    border: 1px solid #ddd
    background-color: #F3F3F3;
    background-image: -moz-linear-gradient(center top , #F3F3F3, #EfEfEf)
    background-image: -webkit-gradient(linear, left top, left bottom, from(#F3F3F3), to(#EfEfEf))
    background-repeat: repeat-x
    font-size: 12px
    position: relative
    a.link-text
      color: #333
      text-decoration: none
      margin-left: 10px
    .btn.content-type
      font-size: 10px
    &.selected
      background-color: #118be7;
      background-image: -moz-linear-gradient(center top, #118be7, #007ad6)
      background-image: -webkit-gradient(linear, left top, left bottom, from(#118be7), to(#007ad6))
      background-repeat: repeat-x
      box-shadow: none
    &.opaque
      opacity: 0.2
    .loader
      top: 2px
      left: 2px
      height: 16px
      width: 16px
      .circle
        width: 16px
        height: 16px
      .circle:after
        background-color: #444

.no-file-selected
  font-size: 12px
  color: #999
  margin: 100px 20px
  text-align: center

.file-details
  margin: 15px 20px
  .btn
    margin-top: -5px
  .lbl
    font-size: 10px
  input[type=text]
    width: 100%
  .text
    font-size: 12px

.web-files-control
  height: 30px
  .btn
    padding: 6px 2px 0
    margin-right: 2px
    border: none
    background: none
    box-shadow: none
    opacity: 0.8
    &.enableable
      opacity: 0.2
      cursor: default
      &:hover
        opacity: 0.2
      &.enabled
        cursor: poiokit
        opacity: 0.8
        &:hover
          opacity: 1
    &:hover
      opacity: 1
  .desc
    margin: 5px 0 0 0
  .selected-counter
    display:none

.iokit-modal
  .source-editor
    position: absolute
    top: 10px
    left: 10px
    right: 10px
    bottom: 10px
    
.iokit-page-designer
  position: absolute
  top: 0
  right: 0
  width: 40px
  bottom: 0
  background: #eee
  border: 1px solid #aaa
  padding: 5px

  .switch-btn
    margin: 0 0 10px
    float: left

  .page-designer-part
    display: none

  .switch-btns
    position: absolute
    left: -113px
    top: 42px
    width: 200px
    transform: rotate( 270deg )
    -ms-transform: rotate( 270deg )
    -moz-transform: rotate( 270deg )
    -webkit-transform: rotate( 270deg )
    -o-transform: rotate( 270deg )
    a
      border: 1px solid #aaa
      border-bottom: none
      margin: 0 1px
      color: #777
      font-size: 12px
      padding: 2px 10px
      text-decoration: none
      &.active
        background-color: #eee

  .design-btn
    margin: 10px 0
    padding: 10px
    border: 1px solid #ccc
    text-align: center
    background-color: #f0f0f0
    cursor: move
    opacity: 0.8
    &:hover
      opacity: 1
      background-color: #fff
      border: 1px solid #ccc
      box-shadow: 1px 1px 3px rgba(0,0,0,0.5)
    &.small
      padding: 0
      margin: 1px
      line-height: 5px
      float: left
      cursor: pointer


  .iokit-page
    min-height: 500px
    width: 100%
    &.ui-state-highlight
      background-color: #ffc

    .iokit-page-box
      width: 180px
      height: 180px
      border: 1px solid #aaa
      padding: 10px