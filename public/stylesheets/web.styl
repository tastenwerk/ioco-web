.iokit-page-designer
  position: absolute
  top: 0
  right: 0
  width: 41px
  bottom: 0
  background: #eee
  border: 1px solid #aaa
  padding: 5px
  z-index: 10

  .switch-btn
    margin: 0 0 10px
    float: left

  .page-designer-part
    display: none

    &.disabled
      .design-btn
        opacity: 0.1
        cursor: default

  .switch-btns
    position: absolute
    left: -226px
    top: 46px
    width: 424px
    transform: rotate( 270deg )
    -ms-transform: rotate( 270deg )
    -moz-transform: rotate( 270deg )
    -webkit-transform: rotate( 270deg )
    -o-transform: rotate( 270deg )
    a
      border: 1px solid #aaa
      border-bottom: none
      margin: 0 1px
      color: #777
      font-size: 12px
      padding: 2px 10px 3px
      text-decoration: none
      &.active
        background-color: #eee

  .design-btn, .source-btn
    margin: 10px 0
    padding: 10px
    border: 1px solid #ccc
    text-align: center
    background-color: #f0f0f0
    opacity: 0.8
    cursor: pointer
    &.text
      font-size: 10px
      padding: 5px
      font-weight: 900

  .design-btn
    cursor: move
    &:hover
      opacity: 1
      background-color: #fff
      border: 1px solid #ccc
      box-shadow: 1px 1px 3px rgba(0,0,0,0.5)
    &.small
      padding: 0
      margin: 1px
      line-height: 5px
      float: left
      cursor: pointer

  .spacer
    height: 1px
    border: none
    border-top: 1px solid #ccc
    margin: 5px 0
    width: 100%
    &.small
      float: left

