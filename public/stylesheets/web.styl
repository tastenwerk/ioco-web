body

  .highlight
    background-color: #ffe

  .iokit-page
    min-height: 500px
    width: 100%
    position: relative

    .iokit-web-bit
      height: 150px
      outline: 2px dashed #eee
      padding: 10px
      position: relative

      .box-controls
        position: absolute
        top: 5px
        right: 5px
        display:none
        height: 24px
        a.box-control
          margin: 1px
          padding: 2px 7px
          .icn
            margin: 3px 0  -3px
          &.move-btn
            opacity: 0.1
            &.move-enabled
              opacity: 1
              cursor: move

      &.hovered
        outline-color: #ddd

      &.active
        outline-color: #ff4040
        .box-controls
          display: block

      &.float-left
        float: left

      &.float-right
        float: right

      &.float-left-all-over
        float: left
        height: 100%

      &.float-right-all-over
        float: right
        height: 100%

      &.position-absolute
        position: absolute
        top: 0
        left: 0

      &.span1, &.span2, &.span3, &.span4, &.span5, &.span6, &.span7
        margin: 1%
        &.first
          margin-left: 0
        &.last
          margin-right: 0
      &span8
        margin: 0
      &.span1
        width: 12%
      &.span2
        width: 24%
      &.span3
        width: 36%
      &.span4
        width: 48%
      &.span5
        width: 60%
      &.span6
        width: 72%
      &.span7
        width: 84%
      &.span8
        width: 98%