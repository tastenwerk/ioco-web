script( type='text/x-kendo-template', id='webpage-form' )
  div
    ul.action-nav
      li
        a.close-btn.btn(data-bind='click: hideForm')
          span &times;
      li
        a.btn.w-icn-only(data-bind='click: toggleProperties')
          span.icn.icn-properties
      li
        a.btn.w-icn-only(data-bind='attr: { href: humanLink }', target='_blank')
          span.icn.icn-preview
      li
        a.btn.w-icn-only(data-bind='click: publish')
          span.icn.icn-locked(data-bind='css: {unlocked: published}')
      li
        a.btn.green(data-bind='click: submitForm')
          =t('save')

    .ioco-subcontent( data-bind='style: { width: tmpl.designer.width }', style='box-shadow: 2px 2px 3px rgba(0,0,0,0.2); margin: 10px' )
      p(data-bind='html: content')

script( type='text/x-kendo-template', id='webpage-properties')
  .properties-win
    ul.panelbar
      li.k-state-active=t('webpage.general')
        div
          p.item
            label=t('webpage.name')
            br
            input(type='text', data-bind='value: name')
          p.item
            label=t('webpage.content')
            br
            input(type='text', data-bind='value: content')
      li=t('webpage.Search Engines')
        div
          p.item
            label=t('webpage.Meta Description')
            br
            input(type='text', data-bind='value: revision.config.meta.description')
          p.item
            label=t('webpage.Meta Keywords')
            br
            input(type='text', data-bind='value: revision.config.meta.keywords')
      li=t('webpage.Revisions')
        div
          p revisions