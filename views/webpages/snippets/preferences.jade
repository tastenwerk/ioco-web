ul.top-tabs-action-nav
  li.action-nav
    a.btn.green(data-bind='click: submitSaveForm')
      =t('save')
  li.action-nav
    a.btn(data-bind='click: hideForm')
      =t('cancel')

form.wide( data-bind="submit: saveForm" )

  .form-content.edit-form
  
    p
      label=t('name')
      br
      input.span-full( type='text', data-bind='value: name' )

    p
      label=t('webelement.title')
      br
      input.span-full( type='text', data-bind='value: i18n().title.'+iokit.config.site.fallbackLocale )

    p
      label=t('document.tags.title')
      br
      input.iokit-tags.span-full( type='text', data-bind='value: stringifiedTags' )
      
    p
      label.pull-left Subtype
      input.span400( type='text', data-bind='value: _subtype' )

    p
      label.pull-left=t('webelement.slug')
      input.span400( type='text', data-bind='value: slug' )

    p
      label.pull-left=t('webelement.hidden')
      input( type='checkbox', data-bind='value: true, checked: preferences().hidden' )
      span.desc=t('webelement.hidden_desc')

    p
      label.pull-left=t('webelement.frontpage')
      input( type='checkbox', data-bind='value: true, checked: preferences().frontpage' )
      span.desc=t('webelement.frontpage_desc')

    p
      label.pull-left=t('webelement.no_robots')
      input( type='checkbox', data-bind='value: true, checked: preferences().noRobots' )
      span.desc=t('webelement.no_robots_desc')