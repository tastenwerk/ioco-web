script(type='text/javascript')
  
  $('#ioco-webpages .ioco-tree').iocoTree({
    url: '/webpages.json?roots=true',
    saveUrl: '/webpages/',
    saveKey: 'webPage',
    saveAttrs: [ 'name', 'tags', 'content', '_subtype', 'slug', 'properties' ],
    defaultValues: { name: '', properties: {}, content: '' },
    beforeSave: function( form, data, save ){
      data.webPage.content = form.find('.ioco-page').html();
      ioco.pageDesigner.cleanup( data.webPage );
      if( typeof(data.webPage.name) === 'undefined' || data.webPage.name.length < 1 )
        data.webPage.name = prompt('Name', '');
      data.webPage.content = form.find('.ioco-page').html();
      this.content( data.webPage.content );
      ioco.pageDesigner.cleanup( data.webPage );
      save( data );
    },
    before: function( tree ){
      tree.TreeItemModel.prototype.previewWebPage = function(){
        window.open( '/pub'+this.slug() );
      }

    },
    afterShowForm: function( item, form ){
      //$('.ioco-page').css('width', $('.ioco-page').width()-100);
      $('#ioco-page-designer').iocoPageDesigner({
        i18n: true,
        csrf: $('#_csrf').val(),
        webPage: new ioco.pageDesigner.models.WebPage( item ),
        after: {
          create: function( plugin, webBit, boxDom, json, done ){
            ioco.notify( json.flash );
            done();
          }
        }
      });
      //$(form).find('.editable-main-content').ioEdit();
    }
  });
  $('#ioco-webpages .ioco-tree ul:first').nestedSortable({
      listType: 'ul',
      forcePlaceholderSize: true,
      handle: 'div',
      helper: 'clone',
      items: 'li',
      opacity: .6,
      placeholder: 'placeholder',
      revert: 250,
      delay: 250,
      tolerance: 'poioco',
      toleranceElement: '> div',
      maxLevels: 5,
      isTree: true,
      expandOnHover: 700,
      startCollapsed: true,
      stop: function( e, ui ){
        function collectChildren( parent ){
          var arr = [];
          parent.find('ul:first').children().each(function(){ arr.push( $(this).attr('data-id') ); });
          return arr;
        }
        var parent = $(ui.item).parent().closest('li.tree-li');
        var children;

        if( parent.length )
          children = collectChildren( parent );
        else
          children = collectChildren( self );
        var formData = { _csrf: $('#_csrf').val(), ids: children.join(',') };
        if( parent.length )
          formData.path = $(parent).attr('data-id') + ':' + $(parent).attr('data-_type');
        $.post( '/documents/sort', formData, function( data ){
          if( data.success )
            ioco.notify( data.flash );
          else
            ioco.notify( { error: $.i18n.t('document.order.saving.failed')})
        })
      }
  });